# Server
PORT=3000
ADMIN_JWT_SECRET=change-this

# Database (PostgreSQL via Prisma)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# Example for local: postgresql://postgres:password@localhost:5432/bus_transport
DATABASE_URL="postgresql://postgres:password@localhost:5432/bus_transport"

# Google Maps (Geocoding / Reverse-Geocoding / Directions)
GOOGLE_MAPS_API_KEY=your-google-api-key
GEOCODE_COUNTRY=IN
GEOCODE_REGION=in

# Search radius (km) for availability checks
SEARCH_RADIUS_KM=1.5

# Superadmin (can approve new admins)
MAIN_ADMIN_EMAIL=you@example.com
MAIN_ADMIN_PASSWORD=strong-password

